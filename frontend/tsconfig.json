{
  "compilerOptions": {
    "allowJs": false,
    "declaration": true,
    "esModuleInterop": true,
    "lib": ["dom", "es5", "es6"],
    "listEmittedFiles": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./dist",
    "removeComments": false,
    "rootDir": "./",
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es6",
    "typeRoots": ["node_modules/@types"]
  },
  "exclude": ["dist", "node_modules"]
}

